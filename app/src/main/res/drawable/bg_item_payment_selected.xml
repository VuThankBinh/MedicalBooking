<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền nổi bật khi được chọn, ví dụ màu cam nhạt -->
    <solid android:color="#FFF3E0" /> <!-- hoặc đổi sang màu xanh đậm như #E3F2FD -->

    <!-- Bo tròn góc -->
    <corners android:radius="8dp" />

    <!-- Viền màu đậm -->
    <stroke
        android:width="2dp"
        android:color="#FF9800" /> <!-- màu viền, ví dụ cam -->
</shape>
