<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chon_thong_tin_kham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#5885F9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_left"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thông tin thanh toán"
                android:textColor="@color/design_default_color_on_primary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/ic_tt1"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_tt5"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_tt6"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_tt7"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/botron_vienxanh"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng khám đa khoa Hưng Yên"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Đường Hải Thượng Lãn Ông, Phường An Tảo,  Thành Phố Hưng Yên"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin bệnh nhân"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ho_so1"/>
                <TextView
                    android:id="@+id/tv_ho_ten2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NGUYỄN HOÀNG NAM"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="#4076FF"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ho_so2"/>
                <TextView
                    android:id="@+id/tv_sdt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ho_so3"/>
                <TextView
                    android:id="@+id/tv_ngay_sinh2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/05/2003"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ho_so4"/>
                <TextView
                    android:id="@+id/tv_dia_chi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xã Hồng Quang, Huyện Thanh Miện, Tỉnh Hải Dương"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đặt khám"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_tonometer"/>
                <TextView
                    android:id="@+id/tv_ten_goi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gói khám mắt"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/line_goi_chuyen_khoa"
                android:visibility="gone">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_trust"/>
                <TextView
                    android:id="@+id/tv_goi_chuyen_khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gói khám mắt tổng quát"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ho_so3"/>
                <TextView
                    android:id="@+id/tv_ngay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/05/2025"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lock2"/>
                <TextView
                    android:id="@+id/tv_gio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08.00-08.30"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_wallet"/>
                <TextView
                    android:id="@+id/tv_gia_goi22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000đ"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <RadioGroup
            android:id="@+id/radioGroupPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ZaloPay -->
            <RadioButton
                android:id="@+id/radioZaloPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua ví ZaloPay"
                android:buttonTint="#2196F3"
                android:drawableStart="@drawable/ic_zalopay_scaled"
                android:paddingStart="10dp"
                android:textSize="14sp" />

            <!-- MoMo -->
            <RadioButton
                android:id="@+id/radioMoMo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua ví MoMo"
                android:buttonTint="#E91E63"
                android:drawableStart="@drawable/ic_momo_scaled"
                android:paddingStart="10dp"
                android:textSize="14sp" />

            <!-- VNPAY -->
            <RadioButton
                android:id="@+id/radioVnpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua VNPAY"
                android:buttonTint="#2196F3"
                android:drawableStart="@drawable/ic_vnpay_scaled"
                android:paddingStart="10dp"
                android:textSize="14sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/botron_img"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền khám"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginRight="180dp"
                    android:layout_marginLeft="5sp"/>
                <TextView
                    android:id="@+id/tv_gia_goi222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000 VNĐ"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="177dp"
                    android:layout_marginLeft="5sp"/>
                <TextView
                    android:id="@+id/tv_gia_goi322"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000 VNĐ"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4076FF"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/btnXacNhan"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thanh toán"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3" />
    </LinearLayout>
</ScrollView>