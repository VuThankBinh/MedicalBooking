<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Thông tin hồ sơ bệnh nhân -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin bệnh nhân"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvGioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:layout_marginBottom="4dp"/>

    <!-- Thông tin gói khám -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin gói khám"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvTenGoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên gói: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvThoiGianThucHien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian thực hiện: "
        android:layout_marginBottom="4dp"/>

    <!-- Thông tin lịch hẹn -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin lịch hẹn"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvNgayThucHien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày thực hiện: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvGioKham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giờ khám: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: "
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnDong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:layout_marginTop="16dp"/>
</LinearLayout> 