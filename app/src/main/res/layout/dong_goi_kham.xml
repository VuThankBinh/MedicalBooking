<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="280dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8sp">
        <LinearLayout
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:orientation="vertical"
            android:background="@drawable/round_item_1"
            android:backgroundTint="@color/white">
            <ImageView
                android:id="@+id/anhsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/anhnengoi"/>
            <TextView
                android:id="@+id/tensp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Gói khám tiểu đường"
                android:textColor="@color/black"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_7"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng khám đa khoa Hưng Yên"
                    android:textSize="12sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="700.00đ"
                    android:textStyle="bold"
                    android:id="@+id/giasp"
                    android:textColor="#EAA000"
                    android:textSize="13sp"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnXN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:text="Đặt khám ngay"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4076FF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>