<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/botron_img"
    android:orientation="vertical">

    <!-- Nội dung chính: hình ảnh và thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Hình ảnh bên trái -->
        <ImageView
            android:id="@+id/imgGoiKham"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anhnengoi" />

        <!-- Thông tin bên phải -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên gói khám"
                android:textColor="#1E5DFE"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tenChuyenKhoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tên chuyên khoa"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/giasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá tiền"
                android:textStyle="bold"
                android:textColor="#EAA000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút chức năng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnXemChiTiet"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Xem chi tiết"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:backgroundTint="#D9D9D9" />

        <Button
            android:id="@+id/btnDatLich"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Đặt lịch ngay"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:backgroundTint="#2196F3" />
    </LinearLayout>
</LinearLayout>
